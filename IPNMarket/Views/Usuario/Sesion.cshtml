@model IEnumerable<IPNMarket.Models.PedidoModel>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IPNMarket - Tu tienda virtual</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/css/CrearCuentaV3.css" />

    <style>
        body {
            background-color: rgb(27, 18, 18);
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .form {
            display: flex;
            flex-direction: column;
            gap: 20px;
            background-color: transparent;
            padding: 30px;
            width: 100%;
            margin: auto;
        }

        .card {
            background-color: rgba(245, 245, 245, 0.9);
        }

        .espacio {
            width: 90%;
            margin: auto;
            background-color: rgba(52, 52, 52, 0.95);
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .espacio2 {
            width: 100%;
            margin: auto;
            background-color: rgba(52, 52, 52, 0.95);
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .View {
            color: #8B0000;
            font-family: Helvetica, sans-serif;
        }

        h1 {
            color: white;
            font-size: 32px;
            margin-bottom: 30px;
            text-align: center;
        }

        h4 {
            color: #8B0000;
        }

        h6 {
            color: #8B0000;
            font-weight: bold;
            text-align: center;
        }

        .flex-row {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 10px;
            justify-content: space-between;
        }

            .flex-row > div > label {
                font-size: 14px;
                color: black;
                font-weight: 400;
            }

        .btn {
            margin-top: 10px;
            width: 100%;
            height: 50px;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: 500;
            gap: 10px;
            border: 1px solid white;
            background-color: white;
            color: #8B0000;
            cursor: pointer;
            transition: 0.2s ease-in-out;
        }

            .btn:hover {
                border: 1px solid #8B0000;
                background-color: #8B0000;
                color: white;
            }

        /* Estilos para el iframe */
        .modal-iframe {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80%;
            height: 80%;
            border: none;
            z-index: 1000;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }

        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            margin-top: 20px;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

    </style>
</head>
<body>

    <ul class="circles">
        <li class="red"></li>
        <li class="white"></li>
        <li class="red"></li>
        <li class="white"></li>
        <li class="red"></li>
        <li class="white"></li>
        <li class="white"></li>
        <li class="white"></li>
        <li class="red"></li>
        <li class="red"></li>
    </ul>

    <form class="form" method="post">
        <div>
            <div class="espacio">

                <h1> PERFIL </h1>

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    @if (ViewBag.n == "0")
                                    {
                                        <img src="@ViewBag.Imagen" alt="IMGusu" class="rounded-circle" width="150" height="150">
                                    }
                                    else
                                    {
                                        <img src="~/Img/sin_perfil/sin_foto.jpeg" alt="IMGusu" class="rounded-circle" width="150" height="150">
                                    }

                                    <div class="mt-3">
                                        <h4>@ViewData["Nombree"] </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6>NOMBRE:</h6>
                                    </div>
                                    <div class="View">
                                        @ViewData["Nombree"] @ViewData["ApPat"] @ViewData["ApMat"]
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6>CORREO:</h6>
                                    </div>
                                    <div class="View">
                                        @ViewData["Correo"]
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6>DIRECCIÓN:</h6>
                                    </div>
                                    <div class="View">
                                        @ViewData["dirección"]
                                    </div>
                                </div>
                                <hr>
                                <div class="flex-row">
                                    <a type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Home">Regresar</a>
                                    <a type="submit" class="btn btn-primary" asp-controller="Usuario" asp-action="EditarPerfilUsuario">Editar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />

            @if (Convert.ToString(ViewData["ID_PERFIL"]) == "1")
            {
                <div class="espacio2">
                    <div class="card mt-4">
                        <div class="container-fluid h-custom">
                            <center><h6>PEDIDOS</h6></center>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="container-fluid h-custom">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Imagen</th>
                                        <th>Nombre</th>
                                        <th>Costo</th>
                                        <th>Cantidad</th>
                                        <th>Total</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pedido in Model)
                                    {
                                        <tr>
                                            <td>
                                                @{
                                                    string imageData = "";
                                                    if (pedido.Imagen != null && pedido.Imagen.Length > 0)
                                                    {
                                                        string base64 = Convert.ToBase64String(pedido.Imagen);
                                                        string extension = "jpg"; // Default extension

                                                        // Determine the image extension
                                                        if (pedido.Imagen.Take(4).SequenceEqual(new byte[] { 137, 80, 78, 71 }))
                                                        {
                                                            extension = "png";
                                                        }
                                                        else if (pedido.Imagen.Take(2).SequenceEqual(new byte[] { 255, 216 }))
                                                        {
                                                            extension = "jpeg";
                                                        }

                                                        // Create the data URI scheme
                                                        imageData = $"data:image/{extension};base64,{base64}";
                                                    }
                                                }
                                                @if (!string.IsNullOrEmpty(imageData))
                                                {
                                                    <img src="@imageData" alt="@pedido.Nombre_Producto" width="60" height="60">
                                                }
                                                else
                                                {
                                                    <span>No disponible</span>
                                                }
                                            </td>
                                            <td>@pedido.Nombre_Producto</td>
                                            <td>@pedido.Costo_Unitario</td>
                                            <td>@pedido.Cantidad</td>
                                            <td>@pedido.Costo_Total</td>
                                            <td>@pedido.Fecha_Pedido.ToString("yyyy-MM-dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
</body>
</html>